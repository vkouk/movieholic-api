{
  "name": "movieholic-server",
  "version": "1.0.3",
  "description": "Online Movie - Series Renting Application",
  "main": "src/server.js",
  "engines": {
    "node": "10.11.0",
    "npm": "6.4.1"
  },
  "scripts": {
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "start": "node dist/server.js",
    "start:dev": "nodemon src/server.js --exec babel-node --presets babel-preset-env",
    "heroku-postbuild": "npm test && npm run build:prod",
    "lint": "eslint **/*.js --ignore-path .eslintignore --max-warnings 0",
    "fix": "eslint **/*.js --ignore-path .eslintignore --fix",
    "test": "set TEST=true && jasmine --config=src/jasmine.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vkouk/movieholic-api.git"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "author": "Vasilis Koukoutis",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.3",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "mongoose": "^5.3.1",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.1.1",
    "jasmine": "^3.2.0",
    "nodemon": "^1.18.4",
    "source-map-support": "^0.5.9",
    "supertest": "^3.3.0",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
